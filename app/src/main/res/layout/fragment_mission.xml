<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/tv_mission_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Danh sách nhiệm vụ"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:paddingBottom="16dp" />

        <!-- List of Missions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <!-- Mission Item -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:background="@drawable/mission_item_bg"
                android:padding="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1. Hoàn thành 3 đơn hàng trong tháng này"
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/check1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_check_gray" /> <!-- Thay đổi check_gray thành check_green khi cần thiết -->
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:background="@drawable/mission_item_bg"
                android:padding="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2. Đánh giá ít nhất 2 sản phẩm"
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/check2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_check_gray" /> <!-- Thay đổi check_gray thành check_green khi cần thiết -->
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:background="@drawable/mission_item_bg"
                android:padding="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="3. Mua 3 món đặc sản khác nhau"
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/check3"

                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_check_gray" /> <!-- Thay đổi check_gray thành check_green khi cần thiết -->
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:background="@drawable/mission_item_bg"
                android:padding="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="4. Áp dụng mã giảm giá cho ít nhất 2 sản phẩm"
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/check4"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_check_gray" /> <!-- Thay đổi check_gray thành check_green khi cần thiết -->
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:background="@drawable/mission_item_bg"
                android:padding="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="5. Chi tiêu tối thiểu 350.000 VNĐ trong tháng này"
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/check5"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_check_gray" /> <!-- Thay đổi check_gray thành check_green khi cần thiết -->
            </LinearLayout>

        </LinearLayout>

        <!-- Reward Title -->
        <TextView
            android:id="@+id/tv_reward_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phần thưởng"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:paddingBottom="16dp" />

        <!-- RecyclerView for Rewards -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/reward_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
