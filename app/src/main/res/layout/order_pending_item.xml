<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:elevation="4dp">

    <!-- Product Image -->
    <ImageView
        android:id="@+id/product_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/comtam"
        android:layout_gravity="center_vertical" />

    <!-- Order Details -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="16dp">

        <TextView
            android:id="@+id/store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maimiao Studio"
            android:textStyle="bold"
            android:textColor="#000" />

        <TextView
            android:id="@+id/product_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đơn / Hai Mảnh Mùa Hè Thường Ngày Quần..."
            android:textColor="#777" />

        <TextView
            android:id="@+id/refund_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đã hoàn tiền"
            android:textColor="#FF0000"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₫103.000"
            android:textColor="#000"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/refund_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số tiền hoàn: ₫90.000"
            android:textColor="#777"
            android:layout_marginTop="4dp" />
    </LinearLayout>
    <!-- View Details Button -->
    <Button
        android:id="@+id/view_details_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xem chi tiết"
        android:backgroundTint="#FF0000"
        android:textColor="#FFF"
        android:layout_gravity="center_vertical" />

</LinearLayout>
