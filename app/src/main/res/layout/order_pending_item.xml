<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Danh sách sản phẩm gợi ý -->
    <!-- Thiết lập chiều cao mẫu cho RecyclerView -->

    <!-- Nút Xem thêm -->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/order_item"
        android:layout_width="370dp"
        android:layout_height="154dp"
        android:layout_margin="6dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toTopOf="@id/see_more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_height="80dp" />

    <TextView
        android:id="@+id/see_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xem thêm ▼"
        android:textColor="#888"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/order_item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Tổng số tiền -->

    <!-- Nút Mua lại -->

    <TextView
        android:id="@+id/total_price"
        android:layout_width="302dp"
        android:layout_height="17dp"
        android:layout_marginTop="4dp"
        android:text="Tổng số tiền : ₫21.000"
        android:textColor="#000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/see_more" />

    <Button
        android:id="@+id/buy_again_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#FFFFFF"
        android:text="Mua lại"
        android:textColor="#FF5722"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/total_price"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
